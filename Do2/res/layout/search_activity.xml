<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<RelativeLayout 
   		android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/chatting_bg_purecolor"
        >
        <EditText
            android:id="@+id/search_title_edit"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="@drawable/search_background"
        	android:layout_marginLeft="8dp"
        	android:layout_marginRight="50dp"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/icon_search"
            android:hint="搜索"
            android:textSize="14sp"
            android:singleLine="true"
            />
        <Button
            android:id="@+id/search_cancle"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@color/transparent"
            android:text="取消"
            android:textSize="15sp"
            android:textColor="@color/black_f2"/>
</RelativeLayout>
<RelativeLayout
    android:id="@+id/search_content_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/tab_bg"
    >
    <ImageView
        android:id="@+id/search_icon_01"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:layout_toLeftOf="@+id/search_icon_02"
        android:src="@drawable/search_msg"
        />
    <ImageView
        android:id="@+id/search_icon_02"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:src="@drawable/search_person"
        android:layout_alignBottom="@+id/search_icon_01"
        />
    <ImageView
        android:id="@+id/search_icon_03"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:layout_toRightOf="@+id/search_icon_02"
        android:src="@drawable/search_article"
        android:layout_alignBottom="@+id/search_icon_01"
        />
    <TextView
        android:layout_below="@+id/search_icon_01"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/font_second_color"
        android:textSize="12sp"
        android:text="你可以搜索到聊天记录、朋友和相关文章."
        android:layout_centerHorizontal="true"
        android:gravity="center"
        />
</RelativeLayout>
</LinearLayout>

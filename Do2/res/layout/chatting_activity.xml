<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_sand_storm"
    >
<RelativeLayout
        android:id="@+id/chat_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/global_title_tool_height"
        android:background="@color/tab_bg" >
        	<Button
        	    android:id="@+id/chat_main_back"
        	    android:layout_width="48dp"
        	    android:layout_height="48dp"
        	    android:layout_centerVertical="true"
        	    android:layout_alignParentLeft="true"
        	    android:background="@drawable/activity_right_back_selector"
        	    />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Hmily."
                android:textColor="@color/black"
                android:textSize="18sp"
                 />
            <Button
        	    android:id="@+id/chat_main_person"
        	    android:layout_width="30dp"
        	    android:layout_height="30dp"
        	    android:layout_centerVertical="true"
        	    android:layout_alignParentRight="true"
        	    android:layout_marginRight="8dp"
        	    android:background="@drawable/chatting_title_right_person"
        	    />
    </RelativeLayout>
     <ListView
            android:id="@+id/chatting_content_listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="50dp"
            android:layout_below="@+id/chat_title_layout"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@color/transparent"
            android:transcriptMode="normal"/>   
    <RelativeLayout
            android:layout_width="fill_parent"
        	android:layout_height="50dp"
        	android:background="@color/chatting_bottom_bg_color"
        	android:focusable="true"
        	android:focusableInTouchMode="true"
        	android:layout_alignParentBottom="true">
        <EditText
            android:id="@+id/chatting_edit"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/search_background"
        	android:layout_marginLeft="5dp"
        	android:layout_marginRight="100dp"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            />
        <Button
            android:id="@+id/chatting_voice"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="65dp"
            android:background="@drawable/chatting_bottom_voice_selector"/>
        <Button
            android:id="@+id/chatting_send"
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/chatting_bottom_btn_send_selector"
            android:text="发送"
            android:textColor="@color/white"
            android:textSize="12sp"
            />
        </RelativeLayout>
</RelativeLayout>

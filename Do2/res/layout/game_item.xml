<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="110dp"
                android:background="@drawable/common_list_item_selector"
                >
                <ImageView
                    android:id="@+id/recomm_game_iv"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/recom_game_01"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    />
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/recomm_game_iv"
                    android:layout_marginLeft="8dp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/game_layout_01">
                        <TextView
                    		android:id="@+id/recomm_game_tv_title_01"
                    		android:layout_width="wrap_content"
                    		android:layout_height="wrap_content"
                    		android:textColor="@color/common_global_textfirst_color"
                    		android:textSize="14sp"
                    		android:text="·第三届i联赛重磅出击"
                    		android:singleLine="true"
                    		android:ellipsize="end"
                    		/>
                    	<TextView
                    		android:layout_width="wrap_content"
                    		android:layout_height="wrap_content"
                   		 	android:textColor="@color/common_global_textsecond_color"
                    		android:textSize="12sp"
                    		android:text="2015-02-25"
                    		android:layout_toRightOf="@+id/recomm_game_tv_title_01"
                    		android:layout_alignBottom="@+id/recomm_game_tv_title_01"
                    		android:layout_marginLeft="4dp"
                    		/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/game_layout_02"
                        android:layout_below="@+id/game_layout_01"
                        android:layout_marginTop="4dp">
                        <TextView
                    		android:id="@+id/recomm_game_tv_title_02"
                    		android:layout_width="wrap_content"
                    		android:layout_height="wrap_content"
                    		android:textColor="@color/common_global_textfirst_color"
                    		android:textSize="14sp"
                    		android:text="·ECL2015冠军联赛"
                    		android:singleLine="true"
                    		android:ellipsize="end"
                    		/>
                    	<TextView
                    		android:layout_width="wrap_content"
                    		android:layout_height="wrap_content"
                   		 	android:textColor="@color/common_global_textsecond_color"
                    		android:textSize="12sp"
                    		android:text="2014-12-25"
                    		android:layout_toRightOf="@+id/recomm_game_tv_title_02"
                    		android:layout_alignBottom="@+id/recomm_game_tv_title_02"
                    		android:layout_marginLeft="4dp"
                    		/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/game_layout_03"
                        android:layout_below="@+id/game_layout_02"
                        android:layout_marginTop="4dp">
                        <TextView
                    		android:id="@+id/recomm_game_tv_title_03"
                    		android:layout_width="wrap_content"
                    		android:layout_height="wrap_content"
                    		android:textColor="@color/common_global_textfirst_color"
                    		android:textSize="14sp"
                    		android:text="·亚洲邀请赛"
                    		android:singleLine="true"
                    		android:ellipsize="end"
                    		/>
                    	<TextView
                    		android:layout_width="wrap_content"
                    		android:layout_height="wrap_content"
                   		 	android:textColor="@color/common_global_textsecond_color"
                    		android:textSize="12sp"
                    		android:text="2014-11-05"
                    		android:layout_toRightOf="@+id/recomm_game_tv_title_03"
                    		android:layout_alignBottom="@+id/recomm_game_tv_title_03"
                    		android:layout_marginLeft="4dp"
                    		/>
                    </RelativeLayout>
                    <ImageView
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:layout_centerVertical="true"
            		android:layout_alignParentRight="true"
            		android:layout_marginRight="@dimen/list_global_item_right_padding"
            		android:src="@drawable/icon_right_normal"/>
                </RelativeLayout>
            </RelativeLayout>

</LinearLayout>

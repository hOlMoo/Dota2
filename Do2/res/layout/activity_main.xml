<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="@color/white"
        	android:id="@+id/menu_layout_bg"
        >
    <FrameLayout
            android:id="@+id/tab_content"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            />
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/line"/>
	<RadioGroup
            android:id="@+id/tabs_rg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/tab_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
			<RadioButton
                android:id="@+id/tab_rb_a"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/tab_chat_selector"
                android:checked="true"
                android:text="@string/tab_chat"
                android:textColor="@drawable/tab_text_color"
                style="@style/RadioButtonstyle" />
            <RadioButton
                android:id="@+id/tab_rb_b"
                android:layout_height="wrap_content"
                android:text="@string/tab_message"
                android:drawableTop="@drawable/tab_message_selector" 
                android:textColor="@drawable/tab_text_color"
                style="@style/RadioButtonstyle" />

            <RadioButton 
                android:id="@+id/tab_rb_c" 
                android:layout_height="wrap_content"
                android:text="@string/tab_more" 
                android:drawableTop="@drawable/tab_more_selector" 
                android:textColor="@drawable/tab_text_color"
                style="@style/RadioButtonstyle" />
            <RadioButton 
                android:id="@+id/tab_rb_d" 
                android:layout_height="wrap_content"
                android:text="@string/tab_myself" 
                android:drawableTop="@drawable/tab_myself_selector" 
                android:textColor="@drawable/tab_text_color"
                style="@style/RadioButtonstyle" /> 
        </RadioGroup>
    </LinearLayout>
</LinearLayout>


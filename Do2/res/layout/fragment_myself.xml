<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chatting_bg_purecolor"
    >
    <RelativeLayout
         android:id="@+id/myself_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/global_title_tool_height"
        android:background="@color/tab_bg" >
        
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/tab_myself"
                android:textColor="@color/black"
                android:textSize="18sp" />
             <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:textColor="@drawable/activity_right_back_textcolor_selector"
                android:text="添加"
                android:background="@null"
                />
    </RelativeLayout>
    <ImageView
        android:id="@+id/myself_line"
        android:layout_below="@+id/myself_title_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/line"/>
     <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="none"
        android:scrollbars="vertical" 
        android:layout_below="@+id/myself_line">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:focusable="true"  
        android:focusableInTouchMode="true"  
        ><!-- focusable失去焦掉 控制ScrollView不自动滚动关键  -->
    <RelativeLayout
        android:id="@+id/myself_my_layout"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        >
        <com.Do2.android.widget.CircleImageView
     android:id="@+id/myself_icon"
     android:layout_width="70dp"
     android:layout_height="70dp"
     android:layout_centerInParent="true"
     android:src="@drawable/hugh"
     app:border_width="2dp"
     app:border_color="@color/transparent"
     />
        <TextView
            android:id="@+id/myself_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/myself_icon"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="italic"
            android:text="L"/>
        <TextView
            android:id="@+id/myself_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myself_name"
            android:layout_toRightOf="@+id/myself_icon"
            android:layout_marginLeft="8dp"
            android:textColor="@color/font_second_color"
            android:textSize="12sp"
            android:textStyle="italic"
            android:text="为梦想而生！"/>
    </RelativeLayout>
 <LinearLayout
     android:id="@+id/myself_my_bottom_layout"
     android:layout_width="fill_parent"
     android:layout_height="40dp"
     android:layout_below="@+id/myself_my_layout"
     android:orientation="horizontal"
     android:layout_marginLeft="50dp"
     android:layout_marginRight="50dp">
     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:layout_weight="1"
         android:orientation="vertical"
         android:gravity="center">
         <TextView
             android:id="@+id/myself_my_guanzhu"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="1"
             android:textColor="@color/font_second_color"
             android:textSize="12sp"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="关注"
             android:textColor="@color/font_second_color"
             android:textSize="12sp"
             android:layout_marginTop="2dp"
             />
     </LinearLayout>
     <ImageView
         android:layout_width="1dp"
         android:layout_height="20dp"
         android:background="@color/line"
         android:layout_gravity="center_vertical"/>
     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:layout_weight="1"
         android:orientation="vertical"
         android:gravity="center">
         <TextView
             android:id="@+id/myself_my_guanzhu"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="0"
             android:textColor="@color/font_second_color"
             android:textSize="12sp"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="粉丝"
             android:textColor="@color/font_second_color"
             android:textSize="12sp"
             android:layout_marginTop="2dp"
             />
     </LinearLayout>
     <ImageView
         android:layout_width="1dp"
         android:layout_height="20dp"
         android:background="@color/line"
         android:layout_gravity="center_vertical"/>
     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         android:layout_weight="1"
         android:orientation="vertical"
         android:gravity="center">
         <TextView
             android:id="@+id/myself_my_guanzhu"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="0"
             android:textColor="@color/font_second_color"
             android:textSize="12sp"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="动态"
             android:textColor="@color/font_second_color"
             android:textSize="12sp"
             android:layout_marginTop="2dp"
             />
     </LinearLayout>
 </LinearLayout>
 <LinearLayout
     android:id="@+id/myself_joy"
     android:layout_width="fill_parent"
     android:layout_height="80dp"
     android:background="@color/white"
     android:layout_below="@+id/myself_my_bottom_layout"
     android:orientation="horizontal"
     android:layout_marginTop="5dp">
 <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/common_list_item_selector">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_zudui"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:text="寻求组队"/>
    </LinearLayout>
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/common_list_item_selector"
        android:gravity="center">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_jifen"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:text="天梯积分"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/common_list_item_selector"
        android:gravity="center">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_love"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:text="收藏"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/common_list_item_selector"
        android:gravity="center">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_about"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginTop="2dp"
            android:text="签到"/>
    </LinearLayout>
    </LinearLayout>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myself_joy"
        android:id="@+id/myself_friend_title"
        android:padding="8dp"
        android:textColor="@color/font_second_color"
        android:textSize="16sp"
        android:text="我的好友"/>
    <ListView
        android:id="@+id/myself_friend_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/myself_friend_title"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@color/transparent"
        android:dividerHeight="1dp"/>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>
